module clk
	time : [0..HORIZON] init 0;
	readyToTick : bool init true;
	[tick] readyToTick & time < HORIZON -> 1 : (time' = time + 1) & (readyToTick'=false);
	[tack] !readyToTick -> 1 : (readyToTick'=true);
endmodule

